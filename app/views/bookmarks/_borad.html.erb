<div class="content__mypage__right__borad__list">
  <div class="content__mypage__right__borad__list__image">
    <% if bookmark.coordinate.image.present? %>
      <%= link_to image_tag("#{bookmark.coordinate.image }", height: "280px"), coordinate_path(bookmark.coordinate.id) %>
    <% else %>
      <%= link_to image_tag("/Unknown.png", height: "280px"), coordinate_path(bookmark.coordinate.id) %>
    <% end %>
    <div class="content__mypage__right__borad__list__image__time">
      <%= bookmark.coordinate.created_at.strftime('%Y/%m/%d') %>
    </div>
  </div>
  <div class="content__mypage__right__borad__list__middle">
    <div class="content__mypage__right__borad__list__middle__okini">
      <%= link_to "お気に入り", coordinate_path(bookmark.coordinate.id), class: "content__mypage__right__borad__list__middle__okini" %>
      <%= Bookmark.where(coordinate_id: bookmark.coordinate[:id]).count %>
    </div> 
    <div class="content__mypage__right__borad__list__middle__like">
      <%= link_to image_tag('/iconmonstr-heart-thin.png', height:'15px', width:'15px'), coordinate_path(bookmark.coordinate.id) %>
      <%= Like.where(coordinate_id: bookmark.coordinate[:id]).count %>
    </div>
  </div>
  <div class="content__mypage__right__borad__list__low">
    <span>ユーザーネーム：</span>
    <%= link_to bookmark.coordinate.user.nickname, coordinate_path(bookmark.coordinate.id), class: "content__mypage__right__borad__list__low__nickname" %>
    <div class="content__mypage__right__borad__list__low__height">
      <%= bookmark.coordinate.height.name %>
    </div>
  </div>
</div>