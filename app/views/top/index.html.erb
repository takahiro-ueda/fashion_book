<header>
  <div class ="pcHeader">
    <div class="pcHeader__headerInner">
      <div class="pcHeader__headerInner__mainHeader">
        <div class="pcHeader__headerInner__mainHeader__title">
          <%= link_to "Fashion Book", '/', class: "pcHeader__headerInner__mainHeader__title__main" %>
          <div class="pcHeader__headerInner__mainHeader__title__sub">毎日の服選びをおしゃれで楽に</div>
        </div>
        <%# %a(href="/")
          = image_tag 'logo.png', height: '40px', width: '150px', alt: 'icon', class: 'pcHeader__headerInner__mainHeader__app'
        .pcHeader__headerInner__mainHeader__searchBox
          = text_field_tag '', '', placeholder: 'キーワードから探す', class: 'pcHeader__headerInner__mainHeader__searchBox__box'
          .pcHeader__headerInner__mainHeader__searchBox__btn
            %a(href="#")
              = image_tag 'icon-search 1.png', height: '100%', width: '100%', alt: 'search' %>
      </div>
      <div class="pcHeader__headerInner__nav">
        <ul class = "pcHeader__headerInner__nav__listLeft">
          <li class = "pcHeader__headerInner__nav__listLeft__first">
            <%= link_to "#" do %> 
              カテゴリー
            <% end%>
            <ul class = "pcHeader__headerInner__nav__listLeft__first__parents">
              <% @parents.each do |parent| %> 
              <%# 親カテゴリの中身 %>
                <li class = "pcHeader__headerInner__nav__listLeft__first__parents__parent">
                  <%= link_to "#" do%> 
                    <%= parent.name %> 
                  <% end %>
                  <%# 子カテゴリの大枠 %>
                  <ul class = "pcHeader__headerInner__nav__listLeft__first__parents__parent__children">
                    <% parent.children.each do |child| %> 
                      <%# 子カテゴリの中身 %>
                      <li class = "pcHeader__headerInner__nav__listLeft__first__parents__parent__children__child">
                        <%= link_to "#" do %> 
                          <%= child.name %> 
                        <% end %>
                        <%# 孫カテゴリの大枠 %>
                        <ul class = "pcHeader__headerInner__nav__listLeft__first__parents__parent__children__child__grandchildren">
                          <% child.children.each do |grandchild| %> 
                            <%# 孫カテゴリの中身 %>
                            <li class = "pcHeader__headerInner__nav__listLeft__first__parents__parent__children__child__grandchildren__grandchild">
                              <%= link_to "#" do %> 
                                <%= grandchild.name %> 
                              <% end %>
                            </li>
                          <% end %>
                        </ul>
                      </li>
                    <% end %>
                  </ul>
                </li>
              <% end %>
            </ul>
          </li>
        </ul>
        <%= link_to "ブランド", '#', class:"pcHeader__headerInner__nav__listLeft__item" %>
        <div class = "pcHeader__headerInner__nav__listRight">
          <% if user_signed_in? && current_user.id %>
            <%= link_to "マイページ", user_path(current_user), class:"pcHeader__headerInner__nav__listRight"%>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to "ログイン", new_user_session_path, class:"pcHeader__headerInner__nav__listLeft__first" %>
            <%= link_to "新規会員登録", new_user_registration_path, class:"pcHeader__headerInner__nav__listLeft__item" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>

