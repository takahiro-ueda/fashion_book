<header>
  <div class ="header">
    <div class="header__item">
      <div class="header__item__show">
        <div class="header__item__show__title">
          <%= link_to "Fashion Book", '/', class: "header__item__show__title__main" %>
          <div class="header__item__show__title__sub">毎日の服選びをおしゃれで楽に</div>
        </div>
      </div>
    </div>
  </div>
</header>
<% breadcrumb :edit_item %>
<%= breadcrumbs separator: " &rsaquo; " %>
<div class="contents">
  <div class="contents__item">
    <div class="contents__item__title">
      <h2>アイテム編集</h2>
    </div>
    <div class="contents__item__edit">
    <%= form_with model: @item, class: :form, local: true do |form| %>

      <div class="contents__item__edit__image">
        <%= form.label :image, '画像' %>
        <%= form.file_field :image, class: :contents__item__edit__image__select, id: "image-form" %>
      </div>

      <div class="contents__item__edit__name">
        <%= form.label :name, '商品名' %>
        <%= form.text_field :name, placeholder: :商品名40文字まで, class: :form__name %>
      </div>

      <div class="contents__item__edit__introduction">
        <%= form.label :introduction, '商品説明' %>
        <%= form.text_field :introduction, placeholder: :商品説明, class: 'form__introduction js-text' %>
        <P class="js-text-count"></P>
      </div>

      <div class="contents__item__edit__category">
        <%= form.label :category_id, 'カテゴリ' %>
        <%= form.collection_select :category_id, Category.all.order("id ASC").limit(8), :id, :name, { prompt: "カテゴリを選んでください" }, { class: "form__category", id: "category_select" }%>
        <div class = "product_select-children", id ="children_box"></div>
        <div class = "product_select-grandchildren", id ="grandchildren_box"></div>
      </div>

      <div class="contents__item__edit__size", id="size_box">
        <%= form.label :items_size_id, 'サイズ' %>
        <%= form.collection_select :items_size_id, ItemsSize.all, :id, :size, {include_blank: "選択してください"}, {class: "form__size"} %>
      </div>

      <div class="contents__item__edit__brand">
        <%= form.label :brand_id, 'ブランド' %>
        <%= form.collection_select :brand_id, Brand.all, :id, :name, {include_blank: "選択してください"}, {class: "form__brand"} %>
      </div>

      <div class="contents__item__edit__season">
        <%= form.label :season_id, '季節' %>
        <%= form.collection_select :season_id, Season.all, :id, :name, {include_blank: "選択してください"}, {class: "form__season"} %>
      </div>

      <div class="contents__item__edit__color">
        <%= form.label :color_id, 'カラー' %>
        <%= form.collection_select :color_id, Color.all, :id, :name, {include_blank: "選択してください"}, {class: "form__color"} %>
      </div>

      <div class="contents__item__edit__price">
        <%= form.label :price, '価格（¥300~9,999,999)' %>
        <%= form.text_field :price, placeholder: :¥0, class: 'form__price' %>
      </div>
      
      <div class="contents__item__edit__actions">
        <%= form.submit '変更', class: :form__btn %>
      </div>
    </div>
    <% end %>
  </div>
</div>
<%= render partial: 'top/footer' %>