<header>
  <div class ="pcHeader">
    <div class="pcHeader__headerInner">
      <div class="pcHeader__headerInner__mainHeader">
        <div class="pcHeader__headerInner__mainHeader__title">
          <%= link_to "Fashion Book", '/', class: "pcHeader__headerInner__mainHeader__title__main" %>
          <div class="pcHeader__headerInner__mainHeader__title__sub">毎日の服選びをおしゃれで楽に</div>
        </div>
        <%# %a(href="/")
          = image_tag 'logo.png', height: '40px', width: '150px', alt: 'icon', class: 'pcHeader__headerInner__mainHeader__app'
        .pcHeader__headerInner__mainHeader__searchBox
          = text_field_tag '', '', placeholder: 'キーワードから探す', class: 'pcHeader__headerInner__mainHeader__searchBox__box'
          .pcHeader__headerInner__mainHeader__searchBox__btn
            %a(href="#")
              = image_tag 'icon-search 1.png', height: '100%', width: '100%', alt: 'search' %>
      </div>
      <div class="pcHeader__headerInner__nav">
        <div class ="pcHeader__headerInner__nav__listLeft">
          <%= link_to '#', class:"pcHeader__headerInner__nav__listLeft__first" do %>カテゴリー
            <ul class = "pcHeader__headerInner__nav__listLeft__first__categories">
              <li class = "pcHeader__headerInner__nav__listLeft__first__categories__category">大カテゴリー</li>
            </ul>
          <% end %>
          <%= link_to "ブランド", '#', class:"pcHeader__headerInner__nav__listLeft__item" %>
        </div>
        <div class = "pcHeader__headerInner__nav__listRight">
          <% if user_signed_in? %>
            <%= link_to "マイページ", user_path(current_user.id), class:"pcHeader__headerInner__nav__listRight"%>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to "ログイン", new_user_session_path, class:"pcHeader__headerInner__nav__listLeft__first" %>
            <%= link_to "新規会員登録", new_user_registration_path, class:"pcHeader__headerInner__nav__listLeft__item" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="contents">
  <div class="content">
    <div class="content__mypage">
      <div class="content__mypage__left">
        <ul class="content__mypage__left__side">
          <li class="content__mypage__left__side__list">
            <%= link_to 'マイページ', user_path(current_user.id), class: "content__mypage__left__side__list__menu" %>
            <ul>
              <li>
                <%= link_to '#', class: "content__mypage__left__side__list__menu__tag" do %>
                  コーディネート選択<%= fa_icon("angle-right") %>
                <% end %>
              </li>
              <li>
                <%= link_to coordinates_path, class: "content__mypage__left__side__list__menu__tag" do %>
                  コーディネート一覧<%= fa_icon("angle-right") %>
                <% end %>
              </li>
              <li>
                <%= link_to '#', class: "content__mypage__left__side__list__menu__tag" do %>
                  お気に入り一覧<%= fa_icon("angle-right") %>
                <% end %>
              </li>
              <li>
                <%= link_to items_path, class: "content__mypage__left__side__list__menu__tag" do %>
                  アイテム一覧<%= fa_icon("angle-right") %>
                <% end %>
              </li>
            </ul>
            <h2 class="content__mypage__left__side__list__menu">設定</h2>
            <ul>
              <li>
                <%= link_to address_path, class: "content__mypage__left__side__list__menu__tag" do %>
                  プロフィール<%= fa_icon("angle-right") %>
                <% end %>
              </li>
              <li>
                <%= link_to edit_address_path, class: "content__mypage__left__side__list__menu__tag" do %>
                  住所変更<%= fa_icon("angle-right") %>
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_registration_path, class: "content__mypage__left__side__list__menu__tag" do %>
                  メール・パスワード変更<%= fa_icon("angle-right") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete, class: "content__mypage__left__side__list__menu__tag" do %>
                  ログアウト<%= fa_icon("angle-right") %>
                <% end %>
              </li>
            </ul>
            <h2 class="content__mypage__left__side__list__menu">退会</h2>
            <ul>
              <li>
                <%# <%= link_to user_path(@user.id), method: :delete, data: { confirm: '本当に削除しますか?' }, class: "content__mypage__left__side__list__menu__tag" do %>
                  <%# 退会<%= fa_icon("angle-right") %>
                <%# <% end %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
      <div class="content__mypage__right">
        <div class="content__mypage__right__seach">
          <h2>閲覧履歴</h2>
        </div>
        <div class="content__mypage__right__history">
          <% @histories.each do |history| %>
            <%# <%= render partial: "coordinate", locals: { coordinate: @coordinate, coordinates: @coordinates, histories: @histories } %>
            <div class="contents__coordinate__index__right__list__tag">
              <div class="contents__coordinate__index__right__list__tag__image">
                <% if @coordinate.image.present? %>
                  <%= image_tag "#{@coordinate.image }", height: "280px" %>
                <% else %>
                  <%=image_tag "/Unknown.png", height: "280px" %>
                <% end %>
                <div class="contents__coordinate__index__right__list__tag__image__time">
                  <%= @coordinate.created_at.strftime('%Y/%m/%d') %>
                </div>
              </div>
              <div class="contents__coordinate__index__right__list__tag__middle">
                <%= link_to "お気に入り", "/", class: "contents__coordinate__index__right__list__tag__middle__okini" %>
                <div class="contents__coordinate__index__right__list__tag__middle__like">
                  <%= link_to image_tag('/iconmonstr-heart-thin.png', height:'15px', width:'15px'), coordinate_path(@coordinate.id) %>
                  <%= Like.where(coordinate_id: @coordinate[:id]).count %>
                </div>
              </div>
              <div class="contents__coordinate__index__right__list__tag__low">
                <span>ユーザーネーム：</span>
                <%= link_to @coordinate.user.nickname, coordinate_path(@coordinate.id), class: "contents__coordinate__index__right__list__tag__low__nickname" %>
                <div class="contents__coordinate__index__right__list__tag__low__height">
                  <%= @coordinate.height.name %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>