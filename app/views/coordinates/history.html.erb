<header>
  <div class ="pcHeader">
    <div class="pcHeader__headerInner">
      <div class="pcHeader__headerInner__mainHeader">
        <div class="pcHeader__headerInner__mainHeader__title">
          <%= link_to "Fashion Book", '/', class: "pcHeader__headerInner__mainHeader__title__main" %>
          <div class="pcHeader__headerInner__mainHeader__title__sub">毎日の服選びをおしゃれで楽に</div>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="contents">
  <div class="content">
    <div class="content__mypage">
      <div class="content__mypage__left">
        <ul class="content__mypage__left__side">
          <li class="content__mypage__left__side__list">
            <%= link_to 'マイページ', user_path(current_user.id), class: "content__mypage__left__side__list__menu" %>
            <ul>
              <li>
                <%= link_to '#', class: "content__mypage__left__side__list__menu__tag" do %>
                  コーディネート選択<%= fa_icon("angle-right") %>
                <% end %>
              </li>
              <li>
                <%= link_to coordinates_path, class: "content__mypage__left__side__list__menu__tag" do %>
                  コーディネート一覧<%= fa_icon("angle-right") %>
                <% end %>
              </li>
              <li>
                <%= link_to coordinate_bookmarks_path(@coordinate), method: :get, class: "content__mypage__left__side__list__menu__tag" do %>
                  お気に入り一覧<%= fa_icon("angle-right") %>
                <% end %>
              </li>
              <li>
                <%= link_to items_path, class: "content__mypage__left__side__list__menu__tag" do %>
                  アイテム一覧<%= fa_icon("angle-right") %>
                <% end %>
              </li>
              <li>
                <%= link_to history_coordinate_path, class: "content__mypage__left__side__list__menu__tag" do %>
                  閲覧履歴<%= fa_icon("angle-right") %>
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
      <div class="content__mypage__right">
        <div class="content__mypage__right__seach">
          <h2>閲覧履歴</h2>
        </div>
        <div class="content__mypage__right__history">
          <% if @histories.present? %>
            <% @histories.each do |browsing_histories| %>
              <%# <%= render partial: "coordinates/history", locals: { coordinate: @coordinate, coordinates: @coordinates, histories: @histories } %>
              <div class="content__mypage__right__history__list">
                <div class="content__mypage__right__history__list__image">
                  <% if @coordinate.image.present? %>
                    <%= image_tag "#{@coordinate.image }", height: "280px" %>
                  <% else %>
                    <%= image_tag "/Unknown.png", height: "280px" %>
                  <% end %>
                  <div class="content__mypage__right__history__list__image__time">
                    <%= @coordinate.created_at.strftime('%Y/%m/%d') %>
                  </div>
                </div>
                <div class="content__mypage__right__history__list__middle">
                  <div class="content__mypage__right__history__list__middle__okini">
                    <%= link_to "お気に入り", coordinate_path(@coordinate.id), class: "content__mypage__right__history__list__middle__okini" %>
                    <%= Bookmark.where(coordinate_id: @coordinate[:id]).count %>
                  </div> 
                  <div class="content__mypage__right__history__list__middle__like">
                    <%= link_to image_tag('/iconmonstr-heart-thin.png', height:'15px', width:'15px'), coordinate_path(@coordinate.id) %>
                    <%= Like.where(coordinate_id: @coordinate[:id]).count %>
                  </div>
                </div>
                <div class="content__mypage__right__history__list__low">
                  <span>ユーザーネーム：</span>
                  <%= link_to @coordinate.user.nickname, coordinate_path(@coordinate.id), class: "content__mypage__right__history__list__low__nickname" %>
                  <div class="content__mypage__right__history__list__low__height">
                    <%= @coordinate.height.name %>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="content__mypage__right__history__no">コーディネートの閲覧履歴はありません</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>